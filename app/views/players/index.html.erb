<h1>All Players</h1>
<div class="box">
    <%= form_tag("/search", method: "get") do %>
      <div class="ui search">
      <%= text_field_tag(:q, nil, placeholder: "Search for Player", class: "prompt") %>
      <%= submit_tag "Search", class: "circular ui inverted button"%>
    </div>
    <% end %>
<ul>
  <% @players.each do |player| %>
    <li class="large-selection"><%= link_to image_tag(player.img_url, width: 100, height: 100, alt: player.name), player_path(player)  %>
    <%=link_to player.name, player, class: "ui inverted button" %></li>
  <% end %>
</ul>
</div>
