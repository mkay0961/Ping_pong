<h1>All Players</h1>
<div class="box">
<ul>
  <% @players.each do |player| %>
    <li class="large-selection"><%= link_to image_tag(player.img_url, width: 100, height: 100, alt: player.name), player_path(player)  %>
    <%=link_to player.name, player, class: "ui inverted button" %></li>
  <% end %>
</ul>
</div>
