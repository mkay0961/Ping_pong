<h1><%= @player.nickname %></h1>
<h3><%= @player.name %></h3>

<div class="box">
  <h3>Games: </h3>
  <% if !@player.games.empty? %>
    <table>
      <tr>
        <th>Tournament</th>
        <th>Round</th>
        <th>Score</th>
      </tr>
      <% @player.games.each do |game| %>
      <tr>
        <td> <%= link_to game.round.tournament.name, game.round.tournament %> </td>
        <td> <%= game.round.num %> </td>
        <td> <%= @player.win?(game) %> </td>
      </tr>
      <% end %>
    </table>
  <% else %>
    <p> <%= @player.name %> hasn't played any games yet!</p>
  <% end %>

  <h3>Stats: </h3>
  <h4>Game win percentage: <%= @player.game_win_percentage %>% </h4>
  <h4>Tournament win percentage: <%= @player.tour_win_percentage %>% </h4>


</div>

<%= form_tag @tournament, method: "delete" do %>
  <%= submit_tag "Delete Player" %>
<% end %>
