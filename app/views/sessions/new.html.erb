<h1>Login Form</h1>


<div class="box">
  <div class="error"><%= flash["notice"] %></div>
  <%= form_tag "/login", class: "ui form" do %>
  <div class="two fields">
    <div class="field">
      <%= label :username, "Username" %>
      <%= text_field_tag :username %>
    </div>
    <div class="field">
      <%= label :password, "Password" %>
      <%= password_field_tag :password %>
    </div>
  </div>
  <%= submit_tag "Login", class: "circular ui inverted button" %>
  <% end %>
  <br>
  <%= link_to "Create a new account", new_user_path, { class: "circular ui inverted button" } %>
</div>
