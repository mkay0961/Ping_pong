<h1>Login Form</h1>


<div class="error"><%= flash["notice"] %></div>

<%= form_tag "/login" do %>
    <%= label :username, "Username" %>
    <%= text_field_tag :username %>
    <%= label :password, "Password" %>
    <%= password_field_tag :password %>
    <%= submit_tag "Login" %>
<% end %>

<%= link_to "Create a new account", new_user_path %>
